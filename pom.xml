<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.example</groupId>
    <artifactId>maven-hello-world</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>jar</packaging>

    <name>maven-hello-world</name>
    <description>A simple Hello World Maven project with vulnerabilities in dependencies</description>

    <dependencies>
        <!-- 1. Outdated Dependency (Vulnerable version) -->
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-core</artifactId>
            <version>4.0.0.RELEASE</version> <!-- Outdated version with known vulnerabilities -->
        </dependency>

        <!-- 2. Missing Dependency Version (Could pull in an insecure version) -->
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-collections4</artifactId>
            <version>4.0</version>
            <!-- Missing version could pull in a vulnerable version automatically -->
        </dependency>

        <!-- 3. Vulnerable Dependency (Insecure version of Apache Log4j) -->
        <dependency>
            <groupId>org.apache.logging.log4j</groupId>
            <artifactId>log4j-core</artifactId>
            <version>2.11.1</version> <!-- Vulnerable version (Log4Shell vulnerability) -->
        </dependency>

        <!-- 4. Duplicate Dependencies (Conflicting versions) -->
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-databind</artifactId>
            <version>2.9.0</version> <!-- Older version with vulnerabilities -->
        </dependency>

        <!-- 5. Deprecated Dependency -->
        <dependency>
            <groupId>org.hibernate</groupId>
            <artifactId>hibernate-core</artifactId>
            <version>5.0.0.Final</version> <!-- Deprecated version, vulnerable to exploits -->
        </dependency>

        <!-- 7. Outdated Cryptographic Library -->
        <dependency>
            <groupId>org.bouncycastle</groupId>
            <artifactId>bcprov-jdk15on</artifactId>
            <version>1.46</version> <!-- Older version with known cryptographic vulnerabilities -->
        </dependency>

        <!-- 8. Unused Dependency (Increases attack surface unnecessarily) -->
        <dependency>
            <groupId>org.apache.kafka</groupId>
            <artifactId>kafka-clients</artifactId>
            <version>0.10.1.0</version> <!-- Unused in the project but still included -->
        </dependency>

        <!-- 9. Insecure JSON Parser (Insecure version of Jackson library) -->
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-core</artifactId>
            <version>2.7.0</version> <!-- Known vulnerability in this version -->
        </dependency>

        <!-- 10. Unsafe Dependency (Insecure version of Apache Struts) -->
        <dependency>
            <groupId>org.apache.struts</groupId>
            <artifactId>struts2-core</artifactId>
            <version>2.3.32</version> <!-- Struts2 with known vulnerabilities (CVE-2017-5638) -->
        </dependency>
    </dependencies>

</project>
